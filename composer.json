{
    "name": "Coldreader",
    "description": "A personal information database, note-taking app, and more.",
    "license": "GPL-3.0-or-later",
    "type": "project",
    "repositories": [
        {
			"type": "vcs",
			"url": "https://github.com/imonroe/cr_aspects_google.git"
        },
        {
			"type": "vcs",
			"url": "https://github.com/imonroe/crps.git"
		},
        {
            "type": "vcs",
            "url": "https://github.com/imonroe/ana.git"
        }
	],
    "require": {
        "php": "^7.1.3",
        "fideloper/proxy": "^4.0",
        "laravel/framework": "5.6.*",
        "laravel/tinker": "^1.0",
        "guzzlehttp/guzzle": "^6.3",
        "imonroe/ana": "dev-master",
        "imonroe/crps": "dev-master",
        "laravelcollective/html": "^5.5.0",
        "league/commonmark": "^0.16",
        "league/flysystem-aws-s3-v3": "~1.0",
        "spatie/laravel-medialibrary": "^6.0.0",
        "watson/bootstrap-form": "^1.1",
        "fabpot/goutte": "^3.2"
    },
    "require-dev": {
        "filp/whoops": "^2.0",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^2.0",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "imonroe\\cr_theme_system\\": "packages/imonroe/cr_theme_system/src",
            "imonroe\\timezone_agent\\": "packages/imonroe/timezone_agent/src",
            "imonroe\\cr_network_aspects\\": "packages/imonroe/cr_network_aspects/src",
            "App\\": "app/"
        },
        "files": ["app/CustomAspects.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"echo('Please run: '.PHP_EOL.'php cr_configure.php'.PHP_EOL.'to complete the installation.'.PHP_EOL);  \""
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ]
    },
    "config": {
        "preferred-install": {
            "*": "dist",
            "imonroe/*": "source"
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
